<div class="grid-x grid-margin-x matches-list">
  <div class="cell medium-offset-1 medium-10 small-offset-1 small-10 cell">
    <a class="button expanded success" href="/lessons/new" >Add a new lesson</a>
  </div>
</div>
<div class="grid-x grid-margin-x matches-list">
  <div class="medium-offset-1 medium-10 small-offset-1 small-10 cell">
    <table id="data-datatables">
      <thead>
      <tr>
        <th>
          Coach
        </th>
        <th>
          Date
        </th>
        <th>
          More info
        </th>
      </tr>
      </thead>
      <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td>
            <%= lesson.coach ? lesson.coach.name : ""%>
          </td>
          <td>
            <%= lesson.lesson_date ? lesson.lesson_date.strftime("%b/%-d/%Y at %l:%M %p") : 'Not Entered' %>
          </td>
          <td>
            <button class="view-lesson button" id="lesson-id-<%=lesson.id%>">View Lesson</button>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div id="lesson_detail" class="reveal large-12 large-centered medium-12 medium-centered" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    </div>
  </div>
</div>

<script>
    $(function() {
        $(".is-active").removeClass('is-active')
        $("#lessons-menu-item").addClass('is-active')
    })
</script>