<form autocomplete="off">
  <input autocomplete="off" type="hidden" id="coach-id" value="<%= @coach ? @coach.id : -1%>">
  <div class="grid-margin-x">
    <div class="grid-x">
      <div class="cell medium-7 medium-offset-1">
        <input autocomplete="off" type="text" id="coach" value="<%=  @coach ? @coach.name : ''%>" placeholder="Enter Name of Coach">
      </div>
      <div class="cell medium-offset-1 medium-2">
        <button class="button cell medium-2 hollow search-coach" id="search">Search</button>
      </div>
    </div>
    <div class="grid-x">
      <div class="search-results cell medium-offset-1 medium-10" style="height:10px">

      </div>
    </div>
    <div class="grid-x">
      <div class="cell medium-3 medium-offset-1">
        <button class="button cell medium-3 success update-coach" id="<%= @lesson ? @lesson.id : '-1'%>" value="submit">Save</button>
      </div>
      <div class="cell medium-3 medium-offset-1">
        <button class="button cell medium-3 secondary cancel-update" id="<%= @lesson ? @lesson.id : '-1'%>" value="submit">Cancel</button>
      </div>
    </div>
  </div>
</form>