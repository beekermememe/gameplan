<form>
  <div class="grid-x grid-margin-x">
    <div class="cell small-offset-1 small-10 match-details" id="<%= @match.id %>">
      <fieldset>
        <label class="match-label">Opponent
          <input class="opponent" type="text"name="opponent" value="<%= @match.opponent.name %>"/>
        </label>
      </fieldset>
      <fieldset>
        <label class="match-label results">Result <%= @match.match_detail.result.win ? '- WIN' : '- LOSS' %>
          <input type="text" name="result" value="<%= @match.match_detail.result.show_sets %>"/>
        </label>
      </fieldset>
      <fieldset>
        <label class="match-label strengths">Strengths
          <input type="text" name="strengths" value="<%= @match.match_detail.show_strengths %>"/>
        </label>
      </fieldset>
      <fieldset>
        <label class="match-label weaknesses">Weaknesses
          <input type="text" name="weaknesses" value="<%= @match.match_detail.show_weaknesses %>"/>
        </label>
      </fieldset>
      <fieldset>
        <label class="match-label note_to_self">Notes to Self
          <input type="textarea" rows="4" disabled="true" name="note_to_self" value="<%= @match.match_detail.note_to_self %>"/>
        </label>
      </fieldset>
    </div>
  </div>
  <div class="cell medium-offset-2 medium-5">
    <button class="button cell medium-offset-1 medium-4 success create-match" value="submit">Save</button>
    <button class="button cell medium-offset-1 medium-4 cancel cancel-create" value="submit">Cancel</button>
  </div>
</form>
<div id="form-modal" class="reveal medium" data-reveal style="display: none"></div>