<form autocomplete="off">
  <div class="match-details" id="<%= @match.id %>">
    <div class="grid-x grid-margin-x">
      <fieldset class="match-label medium-offset-1 medium-11 small-offset-2 small-8 cell">
        <legend>Please select singles or doubles</legend>
        <input type="radio" name="singles_or_doubles" value="singles" id="singles" checked="checked" required><label class='match-label' for="singles">Singles</label>
        <input type="radio" name="singles_or_doubles" value="doubles" id="doubles"><label class='match-label' for="doubles">Doubles</label>
      </fieldset>

      <div class="cell singles-view medium-offset-1 medium-6 small-offset-2 small-8 ">
        <label class="new-opponent match-label">Opponent
          <input id="new-opponent" type="text"name="new-opponent"/>
        </label>
      </div>
      <div class="doubles-view is-hidden  cell medium-offset-1 medium-3 small-offset-2 small-8 ">
        <label class="new-opponent match-label">Opponent 1
          <input id="new-opponent1" type="text"name="new-opponent1"/>
        </label>
      </div>
      <div class="doubles-view is-hidden cell singles-view medium-offset-0 medium-3 small-offset-2 small-8 ">
        <label class="new-opponent2 match-label">Opponent 2
          <input id="new-opponent2" type="text"name="new-opponent2"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-3 small-offset-2 small-8">
        <label class="match-label new-date-and-time">Date
          <input id="new_match_datetime" type="text" name="datetime" placeholder="Please enter a date"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-3 match-details small-offset-2 small-8">
        <label class="new-team match-label">Team
          <input id="new-team" type="text"name="new-team"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-3 match-details small-offset-2 small-8">
        <label class="new-league match-label">League
          <input id="new-league" type="text"name="new-league"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-2 match-details small-offset-2 small-8">
        <label class="new-season match-label">Season/Year
          <input id="new-season" type="text"name="new-season small-offset-2 small-8"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-4 match-details small-offset-2 small-8">
        <label class="match-label new-results">Result
          <input id="new-results" type="text" name="new-results"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-5 match-details small-offset-2 small-8">
        <label class="match-label new-location">Location
          <input id="new-location" type="text" name="new-location" value=""/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-10 match-details small-offset-2 small-8">
        <label class="match-label new-strengths">Strengths
          <input id="new-strengths" type="text" name="new-strengths"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-10 match-details small-offset-2 small-8">
        <label class="match-label new-weaknesses">Weaknesses
          <input id="new-weaknesses" type="text" name="new-weaknesses"/>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-10 match-details small-offset-2 small-8">
        <label class="match-label new-note-to-self">Pre Match Notes
          <textarea autocomplete="off" id="new-note-to-self" type="textarea" rows="4" name="new-note-to-self"></textarea>
        </label>
      </div>
      <div class="cell medium-offset-1 medium-10 match-details small-offset-2 small-8">
        <label class="match-label new-post-match-notes">Post Match Notes
          <textarea autocomplete="off" id="new-post-match-notes" type="textarea" rows="4" name="new-post-match-notes"></textarea>
        </label>
      </div>
    </div>
  </div>
  <div class="grid-x grid-margin-x">
  <div class="cell medium-offset-1 medium-5 small-offset-1 small-10">
    <button class="button expanded success create-match" value="submit">Save</button>
    <button class="button expanded cancel cancel-create" value="submit">Cancel</button>
  </div>
  </div>
  <input type="hidden" name="new_opponent_id" id="new_opponent_id"/>
  <input type="hidden" name="new_opponent2_id" id="new_opponent2_id"/>
  <input type="hidden" name="new_location_id" id="new_location_id"/>
  <input type="hidden" name="new_strengths_ids" id="new_strengths_ids"/>
  <input type="hidden" name="new_weaknesses_ids" id="new_weaknesses_ids"/>
  <input type="hidden" name="new_results_array" id="new_results_array"/>
</form>
<div id="form-modal" class="reveal medium" data-reveal style="display: none"></div>
<div id="searchingModal" class="reveal-modal" data-reveal aria-hidden="true" role="dialog">
  <div class="grid-x grid-margin-x">
    <div class="cell medium-offset-2 medium-5">
      <h2 class="align-center text-center" id="modalTitle" style="color: white">Searching <img style="height: 30px;" src="/images/spinner.gif"></h2>
    </div>
  </div>
</div>
<script>
    $(function() {
        $(".is-active").removeClass('is-active')
        $("#new-match-menu-item").addClass('is-active')
    })
</script>